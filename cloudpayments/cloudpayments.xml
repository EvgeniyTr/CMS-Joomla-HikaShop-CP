<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="1.5" method="upgrade" group="hikashoppayment">
	<name>cloudpayments</name>
	<creationDate>12 july 2018</creationDate>
	<version>1.0.0</version>
	<author>cloudpayments</author>
	<description>This plugin enables you to setup your cloudpayments payment system</description>
	<files>
		<filename plugin="cloudpayments">cloudpayments.php</filename>
		<filename>cloudpayments_configuration.php</filename>
		<filename>cloudpayments_end.php</filename>
		<filename>language/en-gb/en-GB.plg_hikashoppayment_cloudpayments.ini</filename>    
		<filename>language/en-gb/lang.php</filename>    
		<filename>language/ru-ru/lang.php</filename>
	</files>
	<params addpath="/components/com_hikashop/params">
		<param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />
			</fieldset>
		</fields>
	</config>
  
</extension>
